@model IEnumerable<PersonResponse>

@{
    Layout = null;
}
<link href="@("http://" + Context.Request.Host.ToString()  + "/StyleSheet.css")" rel="stylesheet" />
<h1>Persons</h1>

<table class="table w-100 mt">
    <thead>
        <tr>
            <th>Person Name</th>
            <th>Email</th>
            <th>Date of Birth</th>
            <th>Age</th>
            <th>Gender</th>
            <th>Country</th>
            <th>Address</th>
            <th>Receive News Letter</th>
        </tr>
    </thead>
    <tbody>
        @if (Model?.Count() > 0)
        {
            @foreach (PersonResponse person in Model)
            {
                <tr>
                    <td style="width:15%">@person.PersonName</td>
                    <td style="width:15%">@person.Email</td>
                    <td style="width:15%">@person.DateOfBirth?.ToString("dd MM yyyy")</td>
                    <td style="width:5%">@person.Age</td>
                    <td style="width:10%">@person.Gender</td>
                    <td style="width:10%">@person.Country</td>
                    <td style="width:15%">@person.Address</td>
                    <td style="width:5%">@person.ReceiveNewsLetters</td>
                </tr>
            }
        }
        else
        {
            <tr>No data found!</tr>
        }
    </tbody>
</table>